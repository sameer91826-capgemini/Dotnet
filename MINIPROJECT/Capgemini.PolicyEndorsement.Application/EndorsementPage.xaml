<Window x:Class="Capgemini.PolicyEndorsement.Application.EndorsementPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capgemini.PolicyEndorsement.Application"
        mc:Ignorable="d"
        Title="EndorsementPage" Height="450" Width="800">
    <Grid Background="Lavender" Loaded="Grid_Loaded">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="89*"/>
        </Grid.ColumnDefinitions>
        <DataGrid Name="dgendorsement" IsReadOnly="True"  HorizontalAlignment="Left" Height="341" Margin="27,53,0,0" VerticalAlignment="Top" Width="734" ItemsSource="{Binding}" AutoGenerateColumns="True"/>
        <Label Content="Endorsement Table" HorizontalAlignment="Center" Margin="202,10,291,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20" Width="210" Grid.Column="1"/>
        <TextBox Name="txtCnum" HorizontalAlignment="Left" Height="23" Margin="561,10,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
